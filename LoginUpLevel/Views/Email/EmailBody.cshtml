@model EmailViewDTO
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@Model.Title</title>
    <style>
        .email-container {
            font-family: Arial, sans-serif;
            max-width: 600px;
            margin: 40px auto;
            padding: 30px;
            border: 1px solid #e0e0e0;
            border-radius: 10px;
            background-color: #ffffff;
        }

        .email-title {
            color: #1d4ed8;
            text-align: center;
            margin-bottom: 20px;
        }

        .email-content {
            font-size: 16px;
            color: #333333;
            text-align: center;
            margin-bottom: 20px;
        }

        .email-action {
            text-align: center;
            margin: 30px 0;
        }

            .email-action span {
                font-size: 24px;
                font-weight: bold;
                letter-spacing: 6px;
                background-color: #eef6ff;
                padding: 10px 20px;
                border-radius: 6px;
                color: #1d4ed8;
            }

        .email-footer {
            font-size: 13px;
            color: #999999;
            text-align: center;
            margin-top: 40px;
        }
    </style>
</head>
<body>
    <div class="email-container">
        <h1 class="email-title">@Model.Title</h1>

        <p class="email-content">
            @Model.Content
        </p>

        <div class="email-action">
            <span>@Model.ActionContent</span>
        </div>

        <p class="email-footer">
            * Đây là email tự động, vui lòng không phản hồi lại.
        </p>
    </div>
</body>
</html>
